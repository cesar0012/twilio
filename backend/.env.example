# Variables de entorno opcionales para desarrollo
# Estas NO son las credenciales del usuario final (esas se manejan dinámicamente)

# Puerto del servidor Flask (opcional, por defecto 5000)
FLASK_PORT=5000

# Modo debug (opcional, por defecto True en desarrollo)
FLASK_DEBUG=True

# URL base para ngrok (se actualiza automáticamente cuando se ejecuta ngrok)
# NGROK_URL=https://abc123.ngrok.io

# Credenciales de prueba del desarrollador (opcional, solo para testing)
# DEV_ACCOUNT_SID=your_test_account_sid
# DEV_AUTH_TOKEN=your_test_auth_token